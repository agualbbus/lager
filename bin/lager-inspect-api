#!/usr/bin/env node
'use strict';

const program = require('commander');
const lager = require('lager');

program
  .option('-c, --colors', 'output with colors')
  .parse(process.argv);

if (!program.args.length) {
  console.log('You have to provide an API identifier');
  process.exit(1);
}

lager.outputApiSpec(program.args[0], program.colors);
