#!/usr/bin/env node
'use strict';

const path = require('path');
const program = require('commander');
const ncp = require('ncp');

let projectName;
program
  .arguments('[project-name]')
  .action(function (name) {
    projectName = name;
  })
  .parse(process.argv);


const src = __dirname + '/template-new';
const dst = projectName ? path.join(process.cwd(), projectName) : process.cwd();

ncp(src, dst, (e) => {
  if (e) {
   return console.error(e);
  }
  console.log('New project created');
});
